doctype html
html
  head
    title= "Real time web valoration tool"
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/bootstrap.min.css', type='text/css')
    link(rel='stylesheet', href='/bootstrap-theme.min.css', type='text/css')
    link(rel='stylesheet', href='/custom.css', type='text/css')
    script(src='/socket.io/socket.io.js')
    script(src='/jquery-2.1.1.min.js')
    script(src='/bootstrap.min.js')
    script(src='/underscore-min.js')
    script(src='/backbone-min.js')
    script(src='/store.min.js')
  body
    nav(class="navbar navbar-default" role="navigation")
      .container-fluid
        .navbar-header
          a(class="navbar-brand" href="/") &copy; Commenter

    #app.container

    script(type="text/template", id="tpl-questions")
      .row
        img(src="images/llama.jpg", class="img-responsive pull-center")

    script(type="text/template", id="tpl-chatter")
      .row
        .col-md-4
          form(role='form', method='post', id="chatter", class="form")
            .form-group
              label(for='message', class="control-label") Message as <%= username %>
              input(type='text', class='form-control input-lg', id="message", autofocus, required)
              .form-actions.top-separator
                input(type='submit', class='btn btn-primary' value="Send")
        hr.hidden-lg.hidden-md
        .col-md-8.messages-container
          strong.visible-md.visible-lg= "Messages"

    script(type="text/template", id="tpl-message")
      .well.well-sm
        strong
          <span class="username" style="color:<%= color %>")><%= username %></span>
        span(class="msg") <%= message %>

    script(type="text/template", id="tpl-voter")
      .row.text-center
        .row
          button(class='btn btn-success btn-lg yes top-separator') Awesome
        .row
          button(class='btn btn-danger btn-lg no top-separator') I hate you

    script(type="text/template", id="tpl-login")
      .col-md-4.col-md-offset-4
        .row
          h1= "Enter a username"
        .row.top-separator
          form(role='form', method='post', id='user')
            .form-group
              label(for='username', class="control-label") Username
              input(type='text',
                autofocus,
                placeholder='username',
                id='username',
                name='username',
                class='form-control'
              )
            .form-actions
              input(type='submit', class='btn btn-primary', value="Let's chat!")
    script(src='/commentor.js')
    script.
      AEI.app = new CT();
